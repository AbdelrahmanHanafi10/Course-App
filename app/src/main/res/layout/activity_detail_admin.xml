<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detail_admin">

    <ImageView
        android:id="@+id/imageView_admin"
        android:layout_width="334dp"
        android:layout_height="271dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/course1" />

    <LinearLayout
        android:id="@+id/linearLayout_admin"
        android:layout_width="347dp"
        android:layout_height="465dp"
        android:layout_margin="20dp"
        android:background="@drawable/layoutstyle"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/show_name_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/edittextcourse"
            android:padding="10dp" />

        <TextView
            android:id="@+id/show_teachername_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/edittextcourse"
            android:padding="10dp" />

        <MultiAutoCompleteTextView
            android:id="@+id/show_des_admin"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_margin="20dp"
            android:background="@drawable/edittextcourse"
            android:padding="10dp" />

        <Button
            android:id="@+id/button_admin"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttonstyle"
            android:text="Delete"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>